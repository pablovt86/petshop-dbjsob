<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %> 
<body class="forms-body">
  <%- include('../partials/header.ejs') %> 
    <main>
      <div class="forms">
        <form action="/users/login" method="POST" class="form-ad">
            <div class="img-card"><img src="../images/images-forms/duo-1.png" width="380px" alt="foto de mascotas"></div>
            <div class="icon-form"><img src="../images/icons-forms/account-circle.png" alt="icono login"></div>
            <div>
                <img class="icon-input" src="../images/icons-forms/login.png" width="35px" alt="icono usuario">
                <input type="text" class="input-text" name="email" placeholder="email" value="<%= locals.old && old.email %>">
                <% if (locals.errors && errors.email) { %>
                    <small class="text-danger"><%= errors.email.msg %> </small>
                <% } %>            </div>
            <div>
                <img class="icon-input" src="../images/icons-forms/lock.png" width="35px" alt="icono contraseña">
                <input type="password" class="input-text"name="pass" placeholder="Contraseña">

                <% if (locals.errors && errors.pass) { %>
                  <small class="text-danger"><%= errors.pass.msg %> </small>
              <% } %>            </div>
              <br>
              <div class="form-ad-input_check  " >
              <input type="checkbox" name="terms" id="check">
              <label for="check">Acepto los términos y condiciones</label>
              <% if (locals.errors && errors.terms) { %>
                  <small class="text-danger"><%= errors.terms.msg %> </small>
              <% } %>
          </div>
          <br>
            <div><button class="button-form" type="submit">Iniciar Sesión</button></div>
            <div class="link"><a class="link-login" href="#">¿Olvidaste tu contraseña?</a></div>
            <div class="button-register"><a class="button-link-register" href="/users/register">Crear nueva Cuenta</a></div>
        </form>
        <div class="mascotas-img"><img src="../images/images-forms/mascotas.png" alt="foto de mascotas"></div>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %> 
</body>
</html>