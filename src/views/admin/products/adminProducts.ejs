<!DOCTYPE html>
<html lang="es">
    <%- include('../../partials/head.ejs')%>
<body>
    <%- include('../../partials/header-administracion.ejs')%>
    <div class="row">
        <div class="col-lg-8 col-md-8 col-xs-12">
          <h2>crear Productos<a href="/admin/products/create"><button style="margin-left:10px" class="btn btn-success ">Nuevo</button></a></h2>
       
        </div>
      </div>
        <main class="main-administrador">
 
          <div class="row">
               <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                 <div class="table-resposive">
                   <table class="table table-striped table-bordered table-condensed table-hover">
                     <thead>
                       <th>Id</th>
                       <th>Nombre</th>
                       <th>descripcion</th>
                       <th>Categoria</th>
                       <th>
                         subcategoria
                       </th>
                       <th>descuento</th>
                       <th>Precio</th>
                       
                       <th>Imagen</th>
                       <th>marca</th>
                       <th>Opciones</th>
             
                     </thead>
                     <% products.forEach(product => { %>

                       <tr>
                       <td><%= product.id %> </td>
                       <td><%= product.name %> </td>
                       <td><%= product.description %> </td>

                       <td>
                         <%= product.category %> 
                       </td>
                       <td><%= product.subcategory %> </td>
                       <td><%= product.discount %> </td>
                       <td><%= product.price %> </td>
             
                       <td>
                           <img src="/images/products/<%= product.image[0] %> " height="100px" width="100px" class="img-thumbnail">
                       </td>
                         <td><%= product.marca %> </td>
                       <td>
                        <a href="/admin/product/edit/<%=product.id %>" method="get" >  <button class="btn btn-info"> editar</button></a>
                        <form method="POST" action="/admin/product/delete/<%= product.id %>?_method=DELETE">
                          <button class="btn btn-danger"type="submit">eliminar</button> 
                        </form>
                     
                     
                      </td>
             
                       </tr>
                       <% }) %>  

                   </table>
                   </div>
                 </div>
               </div>
             
            </div>
        </main>
    </div>
</body>
</html>